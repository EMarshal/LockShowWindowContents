<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:LockShowWindowContents">

    <tb:TaskbarIcon x:Key="MyNotifyIcon"
                    IconSource="/View_8933.ico"
                    ToolTipText="LockShowWindowContents"
                    MenuActivation="LeftOrRightClick">
        <tb:TaskbarIcon.Resources>
            <local:ExitCommand x:Key="ExitCommand" />
        </tb:TaskbarIcon.Resources>
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Exit" Command="{StaticResource ExitCommand}"/>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</ResourceDictionary>
    